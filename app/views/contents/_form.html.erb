<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :category_id %><br />
  <%= f.select :category_id, options_for_select(Category.all.collect{|cat| [cat.title, cat.id] }, :selected => "#{@content.category_id}") %>
</p>
<p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</p>

<% if current_user and current_user.admin? %>
<p>
  <%= f.label :published %><br />
  <%= f.check_box :published %>
</p>
<% end %>
