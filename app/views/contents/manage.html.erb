<h1>Manage Content</h1>

<br />
<h3><%= link_to 'Add a New Content', new_content_path %></h3><br/>

<% @contents.each do |content| %>
  <%= content.title %> <% if current_user and current_user.admin? %> <%= link_to published_tag(content), published_link(content), :method => :post %> | <%= link_to 'Edit', edit_content_path(content) %> | <%= link_to 'Delete', content_path(content), :method => :delete, :confirm => "Are you sure you want to delete this post?" %> | <%= link_to 'Show', content_path(content) %> <% end %><br /><br />
<% end %>

<%= will_paginate @contents %>
